{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Flask server with Gunicorn",
			"type": "shell",
			"command": "gunicorn",
			"args": [
				"--workers",
				"4",
				"--bind",
				"0.0.0.0:8080",
				"Server:app"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Run Flask server with Waitress",
			"type": "shell",
			"command": "python",
			"args": [
				"-m",
				"waitress",
				"--host=0.0.0.0",
				"--port=8080",
				"Server:app"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		}
	]
}